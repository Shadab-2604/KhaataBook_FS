<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Khaatabook - All Hisaab Kitaab</title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-brand">Khaatabook</div>
      <div class="navbar-links">
        <a href="/" class="navbar-link">Home</a>
        <a href="/create" class="navbar-link">Create New Hisaab</a>
      </div>
    </nav>
    <div class="container">
      <div class="content">
        <h1 class="title">All Hisaab Kitaab</h1>

        <% if(files.length > 0){ %>
        <ul class="list">
          <% files.forEach(file => { %>
          <li class="list-item">
            <span class="item-date"><%= file.split(".")[0] %></span>
            <div class="item-actions">
              <a href="/show/<%= file %>" class="btn btn-blue">View</a>
              <a href="/edit/<%= file %>" class="btn btn-green">Edit</a>
              <!-- Delete Button -->
              <a
                href="/delete/<%= file %>"
                class="btn btn-red"
                onclick="return confirm('Are you sure you want to delete this file?')"
                >Delete</a
              >
            </div>
          </li>
          <% }) %>
        </ul>
        <% } else {%>
        <h3>No records Found!</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
